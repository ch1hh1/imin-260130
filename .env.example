APP_NAME="AIご案内係"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=ja
APP_FALLBACK_LOCALE=ja
APP_FAKER_LOCALE=ja_JP

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ローカルPC用: SQLite（デフォルト）。MySQL にする場合は DB_CONNECTION=mysql と以下を設定
DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=ai_annai
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

# AIご案内係 設定（config/ai_annai.php で上書き可能）
AI_ANNAI_QUESTION_MAX_LENGTH=4000
AI_ANNAI_SESSION_TIMEOUT_MINUTES=30
AI_ANNAI_DISCLAIMER="回答は参考情報であり、最終判断は利用者が行うものとします。"
AI_ANNAI_SHOW_SOURCES=true
AI_ANNAI_LOG_RETENTION_DAYS=90
